		}

		;Quit
		pos (WindowWidth-MenuchipWidth)/2, 328+16-8
		IsMouseOnQuit = IsOnMouse( ginfo_cx, ginfo_cy, MenuChipWidth, MenuChipHeight, mousePosX, mousePosY )
		if (IsMouseOnQuit) {
			celput MenuChipBufferID, 7
			message = "ÉQÅ[ÉÄÇèIóπÇµÇ‹Ç∑ÅB"
		} else {
